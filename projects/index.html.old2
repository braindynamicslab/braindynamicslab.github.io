---
layout: default
title: brain dynamics lab / projects
categories:
 - projects
---

{% for project in site.categories.projects %}
{% capture prev_year %}{{ this_year }}{% endcapture %}
{% capture this_year %}{{ project.year }}{% endcapture %}


{% if forloop.first %}
    {% assign counter = 0 %}
  <div class="row">
    <div class="col-md-12">
      <h1>{{ this_year }}</h1>
<hr style="height:2px;border:none;color:#808088;background-color:#808088;" />    </div>
  </div>
  <div class="row">
  {% elsif this_year != prev_year and this_year > "2011" %}
    {% assign counter = 0 %}
  </div>
  <div class="row">
    <div class="col-md-12">
      {% if this_year != "2012" %}
      <h1>{{ this_year }}</h1>
      {% else %}
      <h1>2012 and earlier</h1>
      {% endif %}
      <hr style="height:2px;border:none;color:#808088;background-color:#808088;" />

    </div>
  </div>
  <div class="row">
  {% else %}
    {% assign counter = counter | plus: 1 %}
    {% assign mod = counter | modulo: 2 %}
    {% if mod == 0 %}

  </div>
  <div class="row">

    {% endif %}
  {% endif %}
  <div class="col-lg-6 projectbox">
    <div class="media">
      <div class="media-body">
        <div class="smallhead mb-1"><a href="{{ project.url }}" class="off">{{ project.title }}</a></div>
        <p class="note">{{ project.authors }} <strong> {{ project.journal }} </strong></p>
      </div>	      
	<a href="{{ project.url }}">
        <img class="ml-3" width=150 class="media-object" src="{{ project.image }}">
      </a>
    </div>
    <div class="bigspacer"></div>
    <div class="spacer"></div>
      </div>
{% endfor %}
  </div>
